  Alias /{{ doil_project_name }}/adminer /var/www/adminer
  Alias /{{ doil_project_name }} /var/www/html/public

  <Directory /var/www/html/public/>
    AllowOverride All
    Require all granted
  </Directory>

  <IfModule mod_headers.c>
    Header set Content-Security-Police "{{ csp }}"
    Header set X-Content-Security-Police "{{ csp }}"
  </IfModule>
</VirtualHost>
